<local:UCTestableStatus x:Class="WpfTestUI.UCTriangle"
                        x:TypeArguments="local:StatusTriangle"
                        x:Name="TriangleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestUI"
             mc:Ignorable="d" 
            DataContext="{Binding ElementName=TriangleControl}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:UIStatusLabel  UIStatusString="{Binding UIStatusString, RelativeSource={RelativeSource AncestorType=UserControl}}"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="85" Width="230"/>
        <Grid HorizontalAlignment="Center" Height="189" VerticalAlignment="Center" Width="200">
            <Path Fill="{Binding Path= TriangleFill}" StrokeThickness="1" Stroke="#FFA3A3A3" Opacity="0.7" 
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Data="m 1 2 l 4.0525 5.2361 l 4.0527 -5.2361 z" Height="104" Stretch="Fill" Width="132" />

        </Grid>


    </Grid>
</local:UCTestableStatus>