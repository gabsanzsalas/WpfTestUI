<local:UCTestableStatus x:Class="WpfTestUI.ElipseControl"
                        x:TypeArguments="local:StatusElipse"
                        x:Name="ElipseControlContext"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestUI"
             mc:Ignorable="d" 
            DataContext="{Binding ElementName=ElipseControlContext}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:UIStatusLabel x:Name="StatusLabelElipse"  UIStatusString="{Binding UIStatusString, RelativeSource={RelativeSource AncestorType=UserControl}}"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="85" Width="230"/>
        <Ellipse HorizontalAlignment="Center" x:Name="Ellipse"  Height="122" Stroke="Black" Fill="{Binding Path= ElipseFill}" VerticalAlignment="Top" Width="294"/>
    </Grid>
 </local:UCTestableStatus>



